[user]
	name = Bernhard Reitinger
	email = bernhard@reitinger.eu
[push]
    default = simple
[pull]
    rebase = true
[core]
    excludesfile = ~/.gitignore
    editor = nvim
    autocrlf = input
[alias]
    co = checkout
    br = branch
    ci = commit
    cp = cherry-pick
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
[github]
    user = breiting
[fetch]
    prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[difftool]
	prompt = false
[gui]
	editor = nvim
[init]
    defaultBranch = main
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
