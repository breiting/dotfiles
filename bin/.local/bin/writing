#!/bin/bash

FILE=$1
SESSION="writing"

tmux kill-session -t $SESSION 2>/dev/null

tmux new-session -d -s $SESSION
tmux split-window -h -p 15
tmux select-pane -t "$SESSION:1.1"
tmux split-window -h -p 85

# Linke Pane 1
tmux send-keys -t $SESSION:1.1 "clear; while true; do sleep 86400; done" C-m

# Zentrale Pane 2
if [ -n "$FILE" ]; then
	tmux send-keys -t $SESSION:1.2 "writer \"$FILE\"" C-m 
fi

# Rechte Pane 3
tmux send-keys -t $SESSION:1.3 "clear; while true; do sleep 86400; done" C-m
#
tmux attach-session -t writing

